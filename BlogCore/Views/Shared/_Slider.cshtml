@model BlogCore.Models.ViewModels.HomeVM

<div id="sliderImagenes" class="carousel slide" data-bs-ride="carousel">
   
    <div class="carousel-inner">
        <!--Hacer el carousel dinamico-->
        
        <!--creamos un fragmento de codigo razor para crear un contador-->
        @{
            int cont = 0;
        }
        <!--para recorrer toda la tabla del slider y traernos los datos-->

        @foreach (var slider in Model.Sliders)
        {
            var itemDinamico = cont++ == 0 ? "active" : "";

            @if (slider.Estado == true)
            {
               <div class="carousel-item @itemDinamico">
                   <img src="@Url.Content(slider.UrlImagen)" class="d-block w-100"  alt="Alternate Text" />
                   <h1 class="text-white text-center bg-dark py-1">@Html.Raw(slider.Nombre)</h1>
               </div>
            }

        }
   
    <button class="carousel-control-prev" type="button" data-bs-target="#sliderImagenes" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#sliderImagenes" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

